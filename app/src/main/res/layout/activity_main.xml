<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/video"
            android:background="@color/content_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="Video"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        <ImageView
                android:id="@+id/screen_shot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="198dp"
                android:clickable="true"
                android:src="@drawable/screen_shot"
                tools:ignore="ContentDescription"/>

        <ImageView
                android:id="@+id/screen_cap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/screen_shot"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="37dp"
                android:clickable="true"
                android:src="@drawable/screen_cap"
                tools:ignore="ContentDescription"/>

        <ImageView
                android:id="@+id/rotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/screen_cap"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="37dp"
                android:clickable="true"
                android:src="@drawable/rotation"
                tools:ignore="ContentDescription"/>

        <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:src="@drawable/like"
                tools:ignore="ContentDescription"/>

        <streaming.yeah1.com.streaming.view.HeartLayout
                android:id="@+id/heart_layout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/like"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>

        <streaming.yeah1.com.streaming.view.VerticalSeekBar
                android:id="@+id/verticalSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_above="@+id/volumn"
                android:layout_alignStart="@+id/volumn"
                android:layout_marginStart="15dp"
                android:progress="100"
                android:max="200"
                android:maxHeight="2.0dp"
                android:minHeight="2.0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:progressDrawable="@drawable/player_seekbar"
                android:thumb="@drawable/player_seekbar_selector"/>

        <ImageView
                android:id="@+id/volumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/like"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="37dp"
                android:clickable="true"
                android:src="@drawable/volumn"
                tools:ignore="ContentDescription"/>

    </RelativeLayout>

    <!--录制start-->
    <RelativeLayout
            android:id="@+id/screen_cap_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="true"
            android:background="@drawable/panel_bg">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="@color/controller_pannel">

            <streaming.yeah1.com.streaming.view.RecordingProgressBar
                    android:id="@+id/progressBar"
                    android:layout_alignParentTop="true"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7.5dp"
                    android:max="15000"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_bar"/>

            <TextView
                    android:id="@+id/delete_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="27dp"
                    android:text="取消"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            <TextView
                    android:id="@+id/cap_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/delete_cap"
                    android:layout_centerHorizontal="true"
                    android:text="至少录制3秒"
                    android:drawableStart="@drawable/point"
                    android:drawablePadding="2dp"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            <TextView
                    android:id="@+id/save_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/delete_cap"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="27dp"
                    android:text="保存"
                    android:visibility="gone"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

        </RelativeLayout>

        <ImageView
                android:id="@+id/cap_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="45dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_pause"
                tools:ignore="ContentDescription"/>

    </RelativeLayout>

    <!--录制end-->
    <!--小视频保存start-->

    <RelativeLayout
            android:id="@+id/save_video_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@color/content_background">

            <TextView
                    android:id="@+id/video_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="小视频已保存至相册"/>

        </RelativeLayout>

    </RelativeLayout>

    <!--小视频保存end-->
    <!--图片保存start-->

    <RelativeLayout
            android:id="@+id/save_picture_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@color/content_background">
            <TextView
                    android:id="@+id/image_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="截图已保存至相册"/>

        </RelativeLayout>

    </RelativeLayout>

    <!--图片保存end-->

</RelativeLayout>
